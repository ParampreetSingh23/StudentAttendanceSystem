<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>
        <%= title %> | Student Attendance System
    </title>

    <!-- Feather Icons -->
    <script src="https://unpkg.com/feather-icons"></script>

    <!-- Google Fonts -->
    <link rel="preconnect" href="https://fonts.googleapis.com">
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
    <link href="https://fonts.googleapis.com/css2?family=Poppins:wght@300;400;500;600;700&display=swap"
        rel="stylesheet">

    <!-- Custom CSS -->
    <link rel="stylesheet" href="/css/style.css">
</head>

<body>
    <header class="main-header">
        <div class="container">
            <a href="/" class="logo">
                <i data-feather="book-open"></i>
                <span>Attendance System</span>
            </a>

            <nav class="main-nav">
                <a href="/" class="<%= title === 'Student Attendance System' ? 'active' : '' %>">
                    <i data-feather="home"></i>
                    <span>Home</span>
                </a>

                <% if (typeof isAuthenticated !=='undefined' && isAuthenticated) { %>
                    <a href="/groups"
                        class="<%= title.includes('Classes') || title.includes('Group') ? 'active' : '' %>">
                        <i data-feather="layers"></i>
                        <span>My Classes</span>
                    </a>
                    <!-- Removed global students/attendance links to enforce class-based flow -->
                    <a href="/auth/logout" class="nav-logout">
                        <i data-feather="log-out"></i>
                        <span>Logout</span>
                    </a>
                    <% } else { %>
                        <a href="/auth/login" class="<%= title === 'Login' ? 'active' : '' %>">
                            <i data-feather="log-in"></i>
                            <span>Login</span>
                        </a>
                        <a href="/auth/register" class="<%= title === 'Register' ? 'active' : '' %>">
                            <i data-feather="user-plus"></i>
                            <span>Register</span>
                        </a>
                        <% } %>
            </nav>
        </div>
    </header>

    <main class="main-content">
        <div class="container">